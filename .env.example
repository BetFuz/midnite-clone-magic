# Supabase Configuration (Auto-configured by Lovable Cloud)
VITE_SUPABASE_PROJECT_ID=""
VITE_SUPABASE_PUBLISHABLE_KEY=""
VITE_SUPABASE_URL=""

# Admin Security Configuration (REQUIRED in Production)
# WARNING: Development defaults are NOT production-safe

# IP Allowlisting (REQUIRED for production)
ENABLE_ADMIN_IP_WHITELIST=false  # Set to 'true' in production
ADMIN_ALLOWED_IPS=               # Comma-separated IPs: 203.0.113.10,203.0.113.11

# MFA Enforcement (REQUIRED for production)
ADMIN_REQUIRE_MFA=false          # Set to 'true' in production

# Token Age Limit (seconds) - Default 15 minutes
ADMIN_MAX_TOKEN_AGE=900          # Tighten to 300 (5min) for high-security

# Rate Limiting
ADMIN_RATE_LIMIT_MAX=100         # Requests per window
ADMIN_RATE_LIMIT_WINDOW=60000    # Window in milliseconds (60000 = 1 minute)

# N8N Webhook Security (REQUIRED if using n8n)
N8N_BEARER_TOKEN=                # Secure random token
N8N_WEBHOOK_SECRET=              # HMAC secret for webhook signature verification

# Payment Provider Keys (Store in Secrets Manager in production)
STRIPE_SECRET_KEY=               # Stripe live secret key
FLUTTERWAVE_SECRET_KEY=          # Flutterwave live secret key

# Production Deployment (Configure after code setup)
# - See PRODUCTION_DEPLOYMENT_GUIDE.md for full setup
# - Migrate secrets to HashiCorp Vault or AWS Secrets Manager
# - Enable Cloudflare Access with corporate SSO
# - Deploy admin app to separate domain (admin.betfuz.com)
